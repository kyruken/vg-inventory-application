
<div class="game-detail">
    <div class="detail-img padding-2"><img src="<%=game.picture %>" alt="<%= game.title %>"/></div>
    <div class="detail-container padding-2">
        <div>
            <h3> <%= game.title %> </h3>
            <div class="space-around">
                <p class="text-size-1">$<%= game.price %></p>
                <p class="text-secondary-color">Release: <%= game.date %></p>
            </div>
            <p class="padding-tb1">Developer: <%= game.developer.name %></p>
        </div>

        <div class="padding-tb1">
            <p><%= game.description %></p>
            <% if (game.description == null) { %>
                <p>There is no description for this game... :(</p>

            <% } %>
        </div>

        <div class="padding-tb1 flex-column">
            <div>
                <% for (const x in game.genre) { %>
                    <button class="red-button button-in-flex"><%=game.genre[x].name%></button>
                <% } %>
            </div>
            
            <div class="padding-tb1">
                <a href="/games/game_update/<%= game._id %>"><button class="button-in-flex">Update game</button></a>
                <a href="/games/game_delete/<%= game._id %>"><button class="button-in-flex">Delete game</button></a>
            </div>
            <p>ESRB Rating: <%= game.esrb %></p>
        </div>
    </div>
</div>