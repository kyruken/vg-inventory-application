<h2>Add a game</h2>
<form>
    <label>
        <input type="text" name="title" placeholder="title">
    </label>
    <label>
        <select name="developer" id="developer">
            <option>Heemerdingers</option>
        </select>
    </label>
    <label>
        ESRB:
        <select name="esrb" id="esrb">
            <option>E</option>
            <option>E10</option>
            <option>T</option>
            <option>M</option>
        </select>
    </label>
    <label>
        <input type="checkbox" name="genre" placeholder="genre">Fantasy
    </label>
    <label>
        <input type="date" name="release" placeholder="release">
    </label>
    <label>
        <input type="number" name="price" placeholder="price">
    </label>
    <button type="submit">Submit</button>
</form>
