<h2><%= name %></h2>
<form method="POST" action=''>
    <label>
        <input type="text" name="title" placeholder="title"
        <% if (locals.game) { %>
            value="<%= game.title %>" >

        <% } %>
    </label>
    <label>
        <select name="developer" id="developer">
            <% for (let x = 0; x < developers.length; x++) { %>
                <!-- We check if our game developer's name object matches the result developer's name object-->
                <!-- if they match, we add selected to the option -->
                <!-- we use locals.game which is always true, and use && to check other statement which can be falsy-->
                <!-- Had a hard time figuring out how to have the update_get work with create_get-->
                <option value="<%= developers[x]._id %>" 
                    <% if (locals.game && game.developer.name === developers[x].name) {%>
                        selected
                        <% } %>
                        >
                    <%= developers[x].name %>
                </option>


            <% } %>
        </select>
    </label>
    <label>
        ESRB:
        <select name="esrb" id="esrb">
            <option
            <% if (locals.game && game.esrb === "E")  { %> 
                selected
            <% } %>
            >E
        </option>
            <option
            <% if (locals.game && game.esrb === "E10")  { %> 
                selected
            <% } %>
            >E10
        </option>
            <option <% if (locals.game && game.esrb === "T")  { %> 
                selected
            <% } %>
            >T
        </option>
            <option <% if (locals.game && game.esrb === "T")  { %> 
                selected
            <% } %>
            >M
            </option>
        </select>
    </label>
    <label>
        <!-- Used two for loops, I don't really like doing it this way -->
        <!-- Is there a more optimal way to solve this? -->
        <% for (let x = 0; x < genres.length; x++) { %>
            <%= genres[x].name %>
            <input type="checkbox" name="genre" placeholder="genre" value="<%=genres[x]._id%>"
            <% for (let y = 0; y < game.genre.length; y++) { %>
                <% if (game.genre[y].name === genres[x].name) { %>
                    checked
                    <% } %>
            <% } %>
            >

        <% } %>
    </label>
    <label>
        <input type="date" name="release" placeholder="release" value="<%= game.date_formatted %>">
    </label>
    <label>
        <input type="number" name="price" placeholder="price" value="<%= game.price %>">
    </label>
    <button type="submit">Submit</button>
</form>
